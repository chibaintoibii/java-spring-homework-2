<?xml version="1.0" encoding="utf-8"?>
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL82Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">b7_user</property>
        <property name="hibernate.connection.password">b7_user</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/b7_db</property>
        <property name="hbm2ddl.auto">create</property>
        <property name="show_sql">true</property>

        <!-- MAPPINGS -->
<!--        <mapping class="org.example.Student"/>-->
<!--        <mapping class="org.example.Book"/>-->
    </session-factory>

</hibernate-configuration>
